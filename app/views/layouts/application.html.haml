!!!
%html
  %head
    %title RailsCampParis3 :: #{@page_title}
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %link{:href => root_url[0..-2]+image_path("RailsCampParis3_fb.png"), :rel => 'image_src'}
  %body
    #HeaderBannerContainer{:class => I18n.locale}
      %ul.lang
        %li
          - url = controller.controller_name == "welcome" ? "/en" : url_for(:locale => "en")
          %a.en{:href => url}
        %li
          - url = controller.controller_name == "welcome" ? "/" : request.path.gsub(/\/en|\/fr/, "")
          %a.fr{:href => url}
    #GlobContainter
      #Menu
        %ul
          %li.Active
            - url = I18n.locale == :fr ? "/" : "/#{I18n.locale}"
            = link_to t(:nav_home), url
          %li
            = link_to t(:nav_attend_now), new_attendee_path
          %li
            %a{ :href => attendees_path }
              = t(:nav_attending)
              %span
                != "(#{Attendee.count})"
          %li.Right
            != link_to t(:nav_to_barcamp), 'http://barcamp.org/RailsCampParis3'

      %div#Content.ClearFix
        != yield

      %div#Footer
        %ul
          %li.Logo
            != link_to image_tag("LogoRailsCampParis3.jpg"), 'http://barcamp.org/RailsCampParis3'
          %li.Date
            = t(:footer_line_1)
            %br
            = t(:footer_line_2)
            %br
            != link_to "39 avenue des Champs Elys√©es 75018 Paris, France.", "http://maps.google.fr/maps?f=q&source=s_q&hl=fr&geocode=&q=17+Rue+des+Magasins,+Strasbourg&sll=46.75984,1.738281&sspn=8.354699,23.269043&ie=UTF8&hq=&hnear=17+Rue+des+Magasins,+67000+Strasbourg,+Bas-Rhin,+Alsace&z=16"
