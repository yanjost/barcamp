!!!
%html
  %head
    %title EdgeCamp :: #{@page_title}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
  %body
    #HeaderBannerContainer{:class => I18n.locale}
      %ul.lang
        %li
          - url = controller.controller_name == "welcome" ? "/de" : url_for(:locale => "de")
          %a.de{:href => url}
        %li
          - url = controller.controller_name == "welcome" ? "/fr" : url_for(:locale => "fr")
          %a.fr{:href => url}
        %li
          - url = controller.controller_name == "welcome" ? "/" : request.path.gsub(/\/fr|\/de/, "")
          %a.en{:href => url}
    #GlobContainter
      #Menu
        %ul
          %li{:class => controller.controller_name == "welcome" && "Active"}
            - url = I18n.locale == :en ? "/" : "/#{I18n.locale}"
            = link_to t(:nav_home), url
          %li{:class => controller.controller_name == "attendees" && controller.action_name == "new" && "Active"}
            = link_to t(:nav_attend_now), new_attendee_path
          %li{:class => controller.controller_name == "attendees" && controller.action_name == "index" && "Active"}
            %a{ :href => attendees_path }
              = t(:nav_attending)
              %span
                != "(#{Attendee.count})"
          %li.Right
            != link_to t(:nav_to_barcamp), 'http://barcamp.org/EdgeCamp'

      %div#Content.ClearFix
        != yield

      %div#Footer
        %ul
          %li.Date
            = t(:footer_line_1)
            %br
            = t(:footer_line_2)
            %br
